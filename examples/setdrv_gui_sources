TARGETNAME=setdrv_gui
TARGETTYPE=PROGRAM
UMTYPE=windows
UMENTRY=winmain

!IFNDEF MSC_WARNING_LEVEL
MSC_WARNING_LEVEL=/W3
!ENDIF

USE_MSVCRT=1

INCLUDES=..\msvc;$(DDK_INC_PATH)
C_DEFINES = $(C_DEFINES) /DDDKBUILD

TARGETLIBS=$(SDK_LIB_PATH)\kernel32.lib \
           $(SDK_LIB_PATH)\user32.lib \
           $(SDK_LIB_PATH)\setupapi.lib \
           $(SDK_LIB_PATH)\ole32.lib \
           $(SDK_LIB_PATH)\shell32.lib \
           ..\libwdi\libwdi.lib

# http://jpassing.com/2008/02/01/how-to-use-manifests-with-buildexe/
# NB: you need to have a matching resource file (.rc) with version info
SXS_APPLICATION_MANIFEST=setdrv_gui.manifest
SXS_ASSEMBLY_VERSION=1.0
SXS_ASSEMBLY_NAME=setdrv_gui
SXS_ASSEMBLY_LANGUAGE=0000

SOURCES=setdrv_gui.c \
        setdrv_gui.rc
